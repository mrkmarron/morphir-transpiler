        "module": "commonjs",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "target": "es2020",
        "sourceMap": true,
        "outDir": "bin"
    },
    "include": [
        "src/*.ts",
    ]
}
